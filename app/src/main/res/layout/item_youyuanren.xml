<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="38px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="200px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26px"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_item_youyuanren"
                android:layout_width="140px"
                android:layout_height="140px"
                android:src="@mipmap/touxiang3"
                />

            <LinearLayout
                android:layout_width="130px"
                android:layout_height="46px"
                android:layout_marginTop="28px"
                android:background="@drawable/item_love_shape"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/love01"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 87%"
                    android:textColor="#ff3e5f"
                    android:textSize="24px"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我眷恋的少"
                        android:textColor="#343434"
                        android:textSize="34px"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="28px"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/item_text_sex_nan_shape"
                            android:gravity="center"
                            android:padding="3px"
                            android:text=" ♂ 20 "
                            android:textColor="@color/blue"
                            android:textSize="24px"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10px"
                            android:background="@drawable/item_text_add_shape"
                            android:gravity="center"
                            android:padding="3px"
                            android:text=" 河南.郑州 "
                            android:textColor="@color/brown"
                            android:textSize="24px"/>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30px"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_launcher_round"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2.3KM"
                        android:textColor="#999999"
                        android:textSize="24px"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="30px"
                android:layout_marginTop="30px"
                android:background="#d4d4d4"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="你们有"
                    android:textColor="@color/grey_text"
                    android:textSize="26px"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="21"
                    android:textColor="@color/green"
                    android:textSize="26px"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="首共同喜欢的歌曲"
                    android:textColor="@color/grey_text"
                    android:textSize="26px"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="28px"
                android:layout_marginTop="20px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="你们最近听过"
                    android:textColor="@color/grey_text"
                    android:textSize="26px"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="51"
                    android:textColor="@color/green"
                    android:textSize="26px"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="首相同的歌曲"
                    android:textColor="@color/grey_text"
                    android:textSize="26px"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="28px"
                android:layout_marginTop="20px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="166px"
                    android:layout_height="50px"
                    android:background="@drawable/item_button_green_shape"
                    android:drawableLeft="@mipmap/ic_launcher"
                    android:gravity="center"
                    android:text="关注"
                    android:textColor="@color/white"
                    android:textSize="26px"
                    />

                <TextView
                    android:layout_width="166px"
                    android:layout_height="50px"
                    android:layout_marginLeft="42px"
                    android:background="@drawable/item_button_brown_shape"
                    android:drawableLeft="@mipmap/ic_launcher"
                    android:gravity="center"
                    android:text="私信"
                    android:textColor="@color/white"
                    android:textSize="26px"
                    />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="20px"
        android:background="@color/grey_divider"/>
</LinearLayout>