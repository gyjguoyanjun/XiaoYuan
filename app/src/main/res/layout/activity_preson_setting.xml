<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolBar_preson_setting_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentInsetStart="0dp"
        android:background="@color/green">

    <TextView
        android:layout_width="match_parent"
        android:text="个人信息"
        android:textSize="50px"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_height="wrap_content" />
</android.support.v7.widget.Toolbar>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="184px"
        android:layout_height="184px"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="50px"
        android:layout_marginTop="96px"
        android:src="@mipmap/touxiang0"
        android:id="@+id/iv_headPortrait_setting_preson_activity"
        />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="98px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="246px"
            android:layout_height="wrap_content"
            android:layout_marginRight="30px"
            android:paddingLeft="50px"
            android:text="昵称"
            android:textColor="#343434"
            android:textSize="30px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="黑色记忆里的彩色"
            android:textColor="#343434"
            android:textSize="28px"/>
    </com.zhy.autolayout.AutoLinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e6e6e6"
        android:paddingLeft="38px"
        android:paddingRight="38px"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="98px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="246px"
            android:layout_height="wrap_content"
            android:layout_marginRight="30px"
            android:paddingLeft="50px"
            android:text="性别"
            android:textColor="#343434"
            android:textSize="30px"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioGroup
                android:id="@+id/r_g"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/r_01"
                    android:layout_width="44px"
                    android:layout_height="44px"
                    android:background="@drawable/rabtn_sex_boy_slc"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:text="♂"
                    android:textColor="@color/white"
                    android:textSize="28px"/>

                <RadioButton
                    android:id="@+id/r_02"
                    android:layout_width="44px"
                    android:layout_height="44px"
                    android:layout_marginLeft="116px"
                    android:background="@drawable/rabtn_sex_girl_slc"
                    android:button="@null"
                    android:gravity="center"
                    android:text="♀"
                    android:textColor="@color/white"
                    android:textSize="28px"/>

            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="64px"
                android:text="男"
                android:textColor="#343434"
                android:textSize="30px"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="224px"
                android:text="女"
                android:textColor="#343434"
                android:textSize="30px"/>
        </RelativeLayout>
    </com.zhy.autolayout.AutoLinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e6e6e6"
        android:paddingLeft="38px"
        android:paddingRight="38px"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="98px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="246px"
            android:layout_height="wrap_content"
            android:layout_marginRight="30px"
            android:paddingLeft="50px"
            android:text="生日"
            android:textColor="#343434"
            android:textSize="30px"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请选择您的出生日"
            android:maxLines="1"
            android:textColor="#999999"
            android:textSize="28px"/>
    </com.zhy.autolayout.AutoLinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e6e6e6"
        android:paddingLeft="38px"
        android:paddingRight="38px"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="98px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="246px"
            android:layout_height="wrap_content"
            android:layout_marginRight="30px"
            android:paddingLeft="50px"
            android:text="所在城市"
            android:textColor="#343434"
            android:textSize="30px"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请选择家乡所在地"
            android:maxLines="1"
            android:textColor="#999999"
            android:textSize="28px"/>
    </com.zhy.autolayout.AutoLinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e6e6e6"
        android:paddingLeft="38px"
        android:paddingRight="38px"/>

    <Button
        android:layout_width="600px"
        android:layout_height="82px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="118px"
        android:textColor="@color/white"
        android:background="@drawable/binding_button_shape"
        android:text="完成"
        android:id="@+id/btn_finish_setting_preson_activity"
        android:textSize="30px"/>
</com.zhy.autolayout.AutoLinearLayout>